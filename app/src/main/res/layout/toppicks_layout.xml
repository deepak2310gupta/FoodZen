<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TopicksShimmer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/imageHelperLayout"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@color/colorShimmer"
                    android:id="@+id/topPicksImage"
                    android:scaleType="fitXY" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/backgrounddiscount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-13dp"
            android:layout_below="@id/imageHelperLayout"
            android:background="@null">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorShimmer"
                android:id="@+id/topPicksDiscoutnView"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/backgrounddiscount"
        android:layout_margin="2dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorShimmer"
            android:maxLines="2"
            android:id="@+id/topPicksRestaurantName"
            android:textColor="#F31743"
            android:textAlignment="center"
            android:fontFamily="@font/signika_semibold"
            android:textSize="13dp"/>

    </RelativeLayout>

        </RelativeLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>








</RelativeLayout>
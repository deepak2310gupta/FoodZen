<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/TopicksShimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:id="@+id/imageHelperLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="140dp"
                        android:background="@drawable/circleshape"
                        android:layout_height="100dp">

                        <ImageView
                            android:id="@+id/topPicksImage"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_centerInParent="true"
                            android:background="@color/colorShimmer"
                            android:scaleType="fitXY" />


                    </RelativeLayout>
            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/backgrounddiscount"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageHelperLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-10dp"
                android:background="@null"
                android:padding="3dp">

                <TextView
                    android:id="@+id/topPicksDiscoutnView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorShimmer"
                    android:fontFamily="@font/actor"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/backgrounddiscount"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp">

                <TextView
                    android:id="@+id/topPicksRestaurantName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorShimmer"
                    android:fontFamily="@font/actor"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#FF1443"
                    android:textSize="13dp" />

            </RelativeLayout>

        </RelativeLayout>


    </com.facebook.shimmer.ShimmerFrameLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/restaurantsImageLayout"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">
            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/dosa"
                android:id="@+id/RestaurantImage"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_marginTop="-13dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/restaurantsImageLayout"
        android:background="@drawable/shopdiscountbackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30% OFF"
            android:id="@+id/RestaurantDiscountNote"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/restaurantsImageLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:fontFamily="@font/merriweather"
            android:id="@+id/RestaurantName"
            android:text="Dosa King"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fast Food,South Indian,Chinese"
            android:layout_margin="2dp"
            android:textColor="@color/black"
            android:id="@+id/RestaurantCategory"
            android:fontFamily="@font/merriweather"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/RestaurantAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:fontFamily="@font/merriweather"
            android:text="Bara Hazari"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:stepSize="0.4"
            android:rating="3.4"
            android:numStars="5"
            android:layout_margin="2dp"/>

    </LinearLayout>


</RelativeLayout>
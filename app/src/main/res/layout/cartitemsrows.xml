<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/help">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="8dp">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_margin="2dp"
            android:maxEms="3"
            android:maxLines="2"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/cartListFoodName"
            android:fontFamily="@font/assistant_semibold"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cartbackground"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:id="@+id/QuantityViewLayout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity :-"
                android:padding="1dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:fontFamily="@font/assistant_semibold"/>

            <TextView
                android:id="@+id/CartFinalQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/assistant_semibold"
                android:padding="1dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </LinearLayout>

        <TextView
                android:id="@+id/CartfinalItemPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/assistant_semibold"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"
                tools:ignore="RtlCompat" />

         <ImageButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@null"
             android:layout_margin="2dp"
             android:layout_weight="1"
             android:layout_gravity="center_vertical"
             android:src="@drawable/ic_baseline_delete_24"
             android:id="@+id/DeleteCartItemButton"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/help"
                android:background="@drawable/dottedline"/>

</RelativeLayout>
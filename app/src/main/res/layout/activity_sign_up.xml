<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#199f79"
    android:backgroundTint="#199F79"
    tools:context=".CollectionActivities.SignUpUserActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:background="@drawable/registerview" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/layouttxtImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/signika_semibold"
                        android:text="Here's your \nfirst step \nwith us !"
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/userprofile"
                        app:civ_border_color="@color/white" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/cardregisterdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layouttxtImage"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/registerNameEt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="6dp"
                                    android:drawableLeft="@drawable/ic_baseline_person_24"
                                    android:drawablePadding="5dp"
                                    android:ems="13"
                                    android:hint="Full Name"
                                    android:imeOptions="actionNext"
                                    android:inputType="textPersonName|textNoSuggestions"
                                    android:padding="8dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/registerMobileEt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="6dp"
                                    android:drawableLeft="@drawable/ic_baseline_phone_24"
                                    android:drawablePadding="5dp"
                                    android:ems="13"
                                    android:hint="Contact Number"
                                    android:imeOptions="actionNext"
                                    android:inputType="phone|textNoSuggestions"
                                    android:padding="8dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/registerAddressEt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="6dp"
                                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                                    android:drawablePadding="5dp"
                                    android:ems="13"
                                    android:hint="Complete Address"
                                    android:imeOptions="actionNext"
                                    android:inputType="textPostalAddress|textNoSuggestions"
                                    android:padding="8dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/registerEmailEt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="6dp"
                                    android:drawableLeft="@drawable/ic_baseline_email_24"
                                    android:drawablePadding="5dp"
                                    android:ems="13"
                                    android:hint="Email Id"
                                    android:imeOptions="actionNext"
                                    android:inputType="textEmailAddress|textNoSuggestions"
                                    android:padding="8dp" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/registerPasswordEt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="6dp"
                                    android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                                    android:drawablePadding="5dp"
                                    android:ems="13"
                                    android:hint="Password"
                                    android:imeOptions="actionDone"
                                    android:inputType="textPassword|textNoSuggestions"
                                    android:padding="8dp" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <Button
                                android:id="@+id/registerButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/cardregisterdetails"
                                android:layout_marginLeft="19dp"
                                android:layout_marginRight="18dp"
                                android:background="@drawable/loginbuttonbackgroung"
                                android:fontFamily="@font/signika_semibold"
                                android:text="Register"
                                android:textColor="@color/white"
                                android:textSize="20dp" />


                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/registerProgressLinearIndicator"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:soundEffectsEnabled="true"
                                android:visibility="invisible"
                                app:indicatorColor="#EF0F29"
                                app:indicatorDirectionLinear="leftToRight" />

                            <TextView
                                android:id="@+id/alreadyHaveAccount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/signika_semibold"
                                android:gravity="center_horizontal"
                                android:text="Already have an account ? Log In"
                                android:textAlignment="center"
                                android:textColor="#199F79"
                                android:textSize="20dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="9dp"
                                android:fontFamily="@font/signika_semibold"
                                android:text="Or Sign Up With"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/googlesignup" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/BackToLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardregisterdetails"
                    android:src="@drawable/back" />


            </RelativeLayout>

            <TextView
                android:id="@+id/txtForSellerRegisteration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/signika_semibold"
                android:text="Register As Seller"
                android:textColor="@color/white"
                android:textSize="23dp"></TextView>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>
